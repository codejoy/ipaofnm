<h1>Listing billings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billings.each do |billing| %>
      <tr>
        <td><%= billing.billingcompany %></td>
        <td><%= billing.billingaddress %></td>
        <td><%= billing.billingcity %></td>
        <td><%= billing.billingstate %></td>
        <td><%= billing.billingzip %></td>
        <td><%= billing.billingphone %></td>
        <td><%= billing.billingfax %></td>
        <td><%= billing.billingemail %></td>
        <td><%= billing.billingcontact %></td>
        <td><%= link_to 'Show', billing %></td>
        <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
        <td><%= link_to 'Destroy', billing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Billing', new_billing_path %>
